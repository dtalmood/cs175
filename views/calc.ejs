<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>House Affordability Calculator</title>
  <!-- Add your CSS styles here -->
</head>
<body>
  <h1>House Affordability Calculator</h1>

  <form id="calculatorForm">
    <label for="income">Annual Income ($):</label>
    <input type="number" id="income" name="income" required>

    <label for="loanTerm">Loan Term (years):</label>
    <input type="number" id="loanTerm" name="loanTerm" required>

    <!-- New input field for total debt -->
    <label for="totalDebt">Total Debt ($):</label>
    <input type="number" id="totalDebt" name="totalDebt" required>

    <button type="button" onclick="calculateAffordability()">Calculate</button>
  </form>

  <div id="result"></div>
</body>

    <script>
      function calculateAffordability() {
        let income = '';
        let loanTerm = '';
        let totalDebt = '';
        let affordability = '';
        let errorCheck = '';

        function onClickCalculate() {
          income = document.getElementById('income').value;
          loanTerm = document.getElementById('loanTerm').value;
          totalDebt = document.getElementById('totalDebt').value;
          
          if (!income || !loanTerm || !totalDebt || isNaN(income) || isNaN(loanTerm) || isNaN(totalDebt)) {
            console.log("error here")
            errorCheck = "Please enter valid numeric values for income, loan term, and total debt.";
            document.getElementById('result').innerText = errorCheck;
            return;
          }
          const calculatedAffordability = (parseFloat(income) - parseFloat(totalDebt)) / parseFloat(loanTerm);
          affordability = calculatedAffordability.toString();
          document.getElementById('result').innerText = 'Affordability: ' + affordability;
        }
        window.calculateAffordability = onClickCalculate;
      }
      calculateAffordability();
    </script>


    </html>
